generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}


model Word {
  id        Int      @id @default(autoincrement())
  word      String
  description   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RelatedLink {
  id        Int      @id @default(autoincrement())
  wordId    Int
  linkedWordId Int
  linkedWord String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
